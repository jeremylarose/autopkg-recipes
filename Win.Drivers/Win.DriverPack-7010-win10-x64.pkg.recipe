<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Creates a 7010 driver pack installer.</string>
	<key>Identifier</key>
	<string>com.github.jeremylarose.pkg.Win.DriverPack-7010-win10-x64</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>7010</string>
	</dict>
	<key>MinimumVersion</key>
	<string>0.6.1</string>
	<key>ParentRecipe</key>
	<string>com.github.jeremylarose.download.Win.DriverPack-7010-win10</string>
	<key>Process</key>
	<array>
		<dict>
		  <key>Processor</key>
		  <string>CabExtractor</string>
			<key>Arguments</key>
			<dict>
					<key>cab_extract_path</key>
					<string>%RECIPE_CACHE_DIR%/%NAME%-%platform%-%version%-%id%</string>
			</dict>
    </dict>
		<dict>
				<key>Processor</key>
				<string>URLTextSearcher</string>
				<key>Arguments</key>
				<dict>
						<key>url</key>
						<string>https://sdi-tool.org/download/</string>
						<key>re_pattern</key>
						<string>SDI_(?P&lt;sdi_version&gt;[\S]+).zip</string>
				</dict>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>url</key>
				<string>https://sdi-tool.org/releases/SDI_%sdi_version%.zip</string>
			</dict>
			<key>Processor</key>
			<string>URLDownloader</string>
		</dict>
		<dict>
			<key>Processor</key>
			<string>EndOfCheckPhase</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
			</dict>
			<key>Processor</key>
			<string>Unarchiver</string>
			<key>Arguments</key>
			<dict>
					<key>destination_path</key>
					<string>%RECIPE_CACHE_DIR%/%NAME%-%platform%-%version%-%id%</string>
			</dict>
		</dict>
		<dict>
		  <key>Processor</key>
		  <string>PkgCreator7z</string>
			<key>Arguments</key>
			<dict>
				<key>install_flags</key>
				<string>-nogui -license -norestorepnt -nosnapshot -nologfile -keepunpackedindex -autoinstall -autoclose -PATH .</string>
				<key>source_path</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%-%platform%-%version%-%id%/SDI_x64_%sdi_version%.exe</string>
				<key>extra_files</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%-%platform%-%version%-%id%/%NAME%/Win10/x64</string>
				<key>pkg_name</key>
				<string>%NAME%-%platform%-%version%-%id%-X64.exe</string>
			</dict>
    </dict>
		<dict>
				<key>Processor</key>
				<string>PathDeleter</string>
				<key>Arguments</key>
				<dict>
						<key>path_list</key>
						<array>
								<string>%RECIPE_CACHE_DIR%/%NAME%-%platform%-%version%-%id%/%NAME%</string>
						</array>
				</dict>
		</dict>
	</array>
</dict>
</plist>
